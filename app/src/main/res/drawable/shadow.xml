<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent background -->
            <corners android:radius="4dp"/> <!-- Shadow radius -->
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="70dp"/>
            <gradient
                android:angle="90"
                android:endColor="#80000000"
            android:startColor="#00000000"
            android:type="linear"/>
        </shape>
    </item>
</layer-list>
