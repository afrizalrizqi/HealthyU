<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        layout="@layout/custom_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottomNavbar"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Greeting Message -->
            <LinearLayout
                android:id="@+id/welcomeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/greetingMessageTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_margin="16sp"
                    android:textSize="18sp"
                    />

                <ImageView
                    android:id="@+id/notificationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:contentDescription="Notification Icon"
                    android:src="@drawable/baseline_notifications_24"

                    app:layout_constraintBottom_toBottomOf="@+id/greetingMessageTv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/greetingMessageTv"
                    android:layout_marginVertical="16dp"/>

            </LinearLayout>

            <!-- BMI Section -->
            <LinearLayout
                android:id="@+id/sectionBMI"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_below="@id/welcomeTv"
                android:layout_marginHorizontal="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#E1F5FE"
                android:orientation="vertical"
                android:padding="15dp">

                <!-- Layout Horizontal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <!-- Layout Kiri (Input) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="8dp">

                        <TextView
                            android:id="@+id/beratBadanTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingTop="7dp"
                            android:text="Berat Badan (kg)"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/beratBadanInput"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:paddingHorizontal="10dp"
                            android:layout_marginBottom="10dp"
                            android:inputType="number"
                            android:background="@drawable/custom_input"
                            android:hint="Contoh: 55"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/tinggiBadanTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Tinggi Badan (cm)"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/tinggiBadanInput"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:paddingHorizontal="10dp"
                            android:inputType="number"
                            android:background="@drawable/custom_input"
                            android:hint="Contoh: 164"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/submitBtn"
                            style="@style/btn_style"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rounded_button"
                            android:padding="0dp"
                            android:text="Cek BMI"
                            android:textAlignment="center"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Layout Kanan (Hasil) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Skor BMI"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/resultTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/categoryBMI"
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Normal"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- PROMO SECTION -->
            <!-- Header Promo -->
            <TextView
                android:id="@+id/headerPromo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sectionBMI"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                style="@style/Heading1"
                android:text="Promo"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/sectionBMI" />

            <LinearLayout
                android:id="@+id/sectionPromo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headerPromo"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/headerPromo">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/promoSatu"
                                android:layout_width="160dp"
                                android:layout_height="100dp"
                                android:src="@drawable/promo1"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Promo Satu"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintTop_toBottomOf="@+id/promoSatu"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/promoDua"
                                android:layout_width="160dp"
                                android:layout_height="100dp"
                                android:src="@drawable/promo1"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Promo Dua"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintTop_toBottomOf="@+id/promoDua"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/promoTiga"
                                android:layout_width="160dp"
                                android:layout_height="100dp"
                                android:src="@drawable/promo1"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Promo Tiga"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintTop_toBottomOf="@+id/promoTiga"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/promoEmpat"
                                android:layout_width="160dp"
                                android:layout_height="100dp"
                                android:src="@drawable/promo1"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Promo Empat"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintTop_toBottomOf="@+id/promoEmpat"/>
                        </LinearLayout>

                    </LinearLayout>



                </HorizontalScrollView>

            </LinearLayout>

            <!-- ARTIKEL SECTION -->
            <!-- Header Artikel -->
            <TextView
                android:id="@+id/headerArtikel"
                style="@style/Heading1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sectionPromo"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Artikel"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/sectionPromo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headerArtikel"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/headerArtikel">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/artikelSatu"
                                android:layout_width="160dp"
                                android:layout_height="100dp"
                                android:src="@drawable/promo1"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Artikel Satu"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintTop_toBottomOf="@+id/artikelSatu"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/artikelDua"
                                android:layout_width="160dp"
                                android:layout_height="100dp"
                                android:src="@drawable/promo1"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Artikel Dua"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintTop_toBottomOf="@+id/artikelDua"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/artikelTiga"
                                android:layout_width="160dp"
                                android:layout_height="100dp"
                                android:src="@drawable/promo1"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Artikel Tiga"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintTop_toBottomOf="@+id/artikelTiga"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/artikelEmpat"
                                android:layout_width="160dp"
                                android:layout_height="100dp"
                                android:src="@drawable/promo1"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Artikel Empat"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_regular"
                                app:layout_constraintTop_toBottomOf="@+id/artikelEmpat"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomNavbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        layout="@layout/custom_navbar" />

</RelativeLayout>