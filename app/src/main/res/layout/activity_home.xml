<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <!-- Greeting Message -->
    <LinearLayout
        android:id="@+id/welcomeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/greetingMessageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="16sp"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Notification Icon"
            android:src="@drawable/baseline_notifications_24"
            android:layout_marginStart="190dp"
            app:layout_constraintBottom_toBottomOf="@+id/greetingMessageTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/greetingMessageTv"
            android:layout_marginVertical="16dp"/>

    </LinearLayout>

    <!-- BMI Section -->
    <LinearLayout
        android:id="@+id/sectionBMI"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#E1F5FE"
        android:padding="15dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTv">

        <!-- Layout Horizontal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Layout Kiri (Input) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/beratBadanTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berat Badan (kg)"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:paddingTop="7dp"/>

                <EditText
                    android:id="@+id/beratBadanInput"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Berat badan dalam kg"
                    android:textSize="12sp"/>


                <TextView
                    android:id="@+id/tinggiBadanTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tinggi Badan (cm)"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/tinggiBadanInput"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Tinggi badan dalam cm"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/submitBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cek Ulang"
                    android:textSize="10sp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <!-- Layout Kanan (Hasil) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skor BMI"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/resultTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/categoryBMI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text=""
                    android:textColor="@color/black"/>

            </LinearLayout>
            
        </LinearLayout>

    </LinearLayout>

    <!-- PROMO SECTION -->
    <!-- Header Promo -->
    <TextView
        android:id="@+id/headerPromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Promo"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/sectionBMI"/>

    <LinearLayout
        android:id="@+id/sectionPromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/headerPromo">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/promoSatu"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:src="@drawable/promo1"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promo Satu"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/promoSatu"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/promoDua"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:src="@drawable/promo1"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promo Dua"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/promoDua"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/promoTiga"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:src="@drawable/promo1"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promo Tiga"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/promoTiga"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/promoEmpat"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:src="@drawable/promo1"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promo Empat"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/promoEmpat"/>
                </LinearLayout>

            </LinearLayout>

            

        </HorizontalScrollView>

    </LinearLayout>

    <!-- ARTIKEL SECTION -->
    <!-- Header Artikel -->
    <TextView
        android:id="@+id/headerArtikel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Artikel"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/sectionPromo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/headerArtikel">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/artikelSatu"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:src="@drawable/promo1"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artikel Satu"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/artikelSatu"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/artikelDua"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:src="@drawable/promo1"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artikel Dua"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/artikelDua"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/artikelTiga"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:src="@drawable/promo1"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artikel Tiga"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/artikelTiga"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/artikelEmpat"
                        android:layout_width="160dp"
                        android:layout_height="100dp"
                        android:src="@drawable/promo1"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artikel Empat"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@+id/artikelEmpat"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>