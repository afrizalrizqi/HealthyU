<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:background="@color/white"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    android:layout_marginBottom="12dp"
    android:padding="8dp">

    <!-- List Pasien -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/card_background"
        android:id="@+id/list_pasien"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama_pasien"
                style="@style/PasienNameRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pasien"
                android:fontFamily="@font/poppins_semi_bold"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_gender"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:id="@+id/jenisKelamin_pasien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_regular"
                    style="@style/PasienGenderRiwayat"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_lihatTes"
            style="@style/btn_style"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="Lihat Tes"
            android:fontFamily="@font/poppins_medium"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_button"/>
    </RelativeLayout>

