<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F4"
    tools:context=".MainActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/header_bkg"
        android:padding="16dp">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="HealthyU"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/header_user"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="Jeremy PW"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Riwayat Tes"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/search_bkg"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="25dp">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Cari Pasien"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:inputType="text"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_search_24"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <!-- List of Patients -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:background="@drawable/card_background">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/patient_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advenia Kusuma Bangsa"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/patient_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perempuan"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/baseline_female_24"
                        android:drawablePadding="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_view_test"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Lihat Tes"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/yellow"/>
            </LinearLayout>

            <!-- Card 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:background="@drawable/card_background">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/patient_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luis Jaya Kusuma"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/patient_gender2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laki-laki"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/baseline_male_24"
                        android:drawablePadding="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_view_test2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Lihat Tes"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/yellow"/>
            </LinearLayout>

            <!-- Card 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:background="@drawable/card_background">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/patient_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Micheline Glenesia"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/patient_gender3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perempuan"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/baseline_female_24"
                        android:drawablePadding="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_view_test3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Lihat Tes"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/yellow"/>
            </LinearLayout>

            <!-- Card 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center"
                android:background="@drawable/card_background">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/patient_name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Afrizal Ijul Komti"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/patient_gender4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laki-laki"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/baseline_male_24"
                        android:drawablePadding="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_view_test4"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Lihat Tes"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_gravity="bottom"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/yellow"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
