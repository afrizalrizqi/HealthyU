<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp">

        <RadioButton
            android:id="@+id/radio_button"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="23dp"
            android:buttonTint="@color/radio_button_selector"/>

        <LinearLayout
            android:id="@+id/pasien_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/radio_button"
            android:layout_marginStart="11dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nama_pasien"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="Jeremy Putra Wijaya"
                style="@style/ContentHeader"/>

            <TextView
                android:id="@+id/txt_nik"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="123123123123123"
                style="@style/ContentSubHeader"/>

            <TextView
                android:id="@+id/txt_nomor_telepon"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="0812312313"
                style="@style/ContentSubHeader"/>

            <TextView
                android:id="@+id/txt_gender"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Laki-Laki"
                style="@style/ContentSubHeader"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="23dp"
        android:layout_below="@id/pasien_item"
        android:background="@color/grey"/>

</LinearLayout>
