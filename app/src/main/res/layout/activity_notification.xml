<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity">

    <!-- NOTIFICATION HEADER -->
    <LinearLayout
        android:id="@+id/notificationSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/notificationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="16sp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tandaiBacaSemuaTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tandai Baca Semua"
            android:layout_margin="16sp"
            android:textAlignment="textEnd"/>
    </LinearLayout>


    <!-- CONTENT NOTIFICATION -->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/notificationRv"
            app:layout_constraintTop_toBottomOf="@id/notificationSection"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scrollbars="vertical"
            android:layout_marginTop="12dp"
            tools:listitem="@layout/item_row_notification"/>



</androidx.constraintlayout.widget.ConstraintLayout>