<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="458dp"
    android:paddingHorizontal="40dp"
    android:paddingVertical="40dp"
    android:background="@drawable/backgroundsuccess"
    android:gravity="center"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingHorizontal="40dp">

            <ImageView
                android:id="@+id/closeButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"></Space>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Sukses"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/checkcircle" />


            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="Penjadwalan berhasil dibuat! Anda dapat melihatnya pada halaman Riwayat Tes"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="150dp"></Space>
    </LinearLayout>