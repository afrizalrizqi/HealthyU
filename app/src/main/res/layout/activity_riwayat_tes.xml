<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/detail_tes_background"
    android:backgroundTint="@color/white"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/nama_tes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="Nama Tes" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#60A5A3A3"
            android:layout_below="@id/nama_tes"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider">

        <TextView
            android:id="@+id/lokasi_tes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:textSize="12dp"
            android:fontFamily="@font/poppins_regular"
            android:drawablePadding="8dp"
            android:textColor="@color/black"
            tools:text="Lokasi" />

        <TextView
            android:id="@+id/tanggal_tes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lokasi_tes"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12dp"
            android:drawableLeft="@drawable/baseline_calendar_month_24"
            android:drawablePadding="8dp"
            tools:text="Tanggal"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/waktu_tes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tanggal_tes"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12dp"
            android:drawableLeft="@drawable/baseline_access_time_filled_24"
            android:drawablePadding="8dp"
            tools:text="Waktu"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/status_grid"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:text="Status :"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/status_tes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/baseline_note_alt_24"
                android:drawablePadding="8dp"
                android:text="Status"
                android:textColor="@color/black"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_detail"
            style="@style/btn_style"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/status_grid"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:text="Lihat Detail"
            android:fontFamily="@font/poppins_medium"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="false"/>
        </RelativeLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>
