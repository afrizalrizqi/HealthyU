<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="5dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:paddingVertical="10dp"
        android:paddingHorizontal="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/labImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/buttonhomeservice"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lab Name"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/labAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lab Address"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/detail_grey"
                android:textSize="11sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:weightSum="2"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/time"
                        android:layout_marginRight="4dp"
                        />
                    <TextView
                        android:id="@+id/labHours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:10 - 17:00"
                        android:textSize="11dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/phone"
                        android:layout_marginRight="4dp"
                        />
                    <TextView
                        android:id="@+id/labPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0811765971"
                        android:textSize="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|bottom"
                >
                <Button
                    android:id="@+id/selectButton"
                    style="@style/btn_style"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:background="@drawable/rounded_button"
                    android:text="Pilih"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
