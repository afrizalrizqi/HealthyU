<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginLeft="11dp">

    <TextView
        android:id="@+id/tvLocationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:text="Lokasi Tes Kesehatan"
        android:fontFamily="@font/poppins_medium"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/icon_lokasi"
            android:layout_marginTop="7dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/lokasi_icon"
            />

        <TextView
            android:id="@+id/namaLab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rumah Talenta BCA"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jl. Pakuan No. 5, Sumur Batu, Kec. Babakan Madang, Kabupaten Bogor, Jawa Barat 16810"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="-10dp"
        android:textColor="@color/placeholder_text"
        android:lineSpacingExtra="2dp" />

    <View
        android:layout_width="365dp"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi Pasien"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/InformasiPasien"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/ubahInfo"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="right"
            android:text="Ubah"
            android:textColor="@color/black" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/icon_user"
            android:layout_marginTop="7dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/user_icon"
            />

        <TextView
            android:id="@+id/namaUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeremy Putra Wijaya"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/nikUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1271234563452223"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/placeholder_text"
        android:lineSpacingExtra="2dp" />

    <TextView
        android:id="@+id/noTelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="081234561231"
        android:layout_marginLeft="32dp"
        android:textColor="@color/placeholder_text"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="2dp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laki-Laki"
        android:layout_marginLeft="32dp"
        android:textColor="@color/placeholder_text"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="-3dp"
        />

    <View
        android:layout_width="365dp"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:background="@color/divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Tes Kesehatan"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/tes"
            android:layout_marginTop="7dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/tes_icon"
            />

        <TextView
            android:id="@+id/namaTes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tes Hematologi Lengkap"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/lokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pelaksanaan di lab"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="-10dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/placeholder_text"
        android:lineSpacingExtra="2dp" />

    <TextView
        android:id="@+id/tanggalTes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21 Mei 2024"
        android:layout_marginLeft="32dp"
        android:textColor="@color/placeholder_text"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="2dp" />

    <TextView
        android:id="@+id/jamTes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08.00 - 08.15"
        android:layout_marginLeft="32dp"
        android:textColor="@color/placeholder_text"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="-3dp"
        />

    <View
        android:layout_width="365dp"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:background="@color/divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/jadwalkanTes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/register_button"
        android:fontFamily="@font/poppins_regular"
        android:text="Jadwalkan Tes"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"/>


</LinearLayout>
