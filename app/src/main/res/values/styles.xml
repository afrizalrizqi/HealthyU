<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="android:background">#FCFCFC</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Heading1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContentHeader" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ContentSubHeader" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ContentDetail" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/detail_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Hyperlink" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Button style -->
    <style name="btn_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">351dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="textFillColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">2dp</item>
    </style>

</resources>